{
  "manifest_version": 2,

  "name": "Custom Chrome",

  "description": "A beautiful Google Chrome extension to turn on or off your other extensions quickly and easily without leaving your current tab",

  "version": "0.81",

  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'",

  "permissions": [
    "storage",
    "management"
  ],

  "icons": { "16": "googleCog16.png",
           "48": "googleCog48.png",
          "128": "googleCog128.png" },

  "browser_action": {
    "default_icon": "googleCog128.png",
    "default_popup": "popup.html"
  },

  "short_name": "Custom Chrome"
}
